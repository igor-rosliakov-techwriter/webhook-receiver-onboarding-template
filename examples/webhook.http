### Webhook request WITH valid signature (should return 200)
# Before sending this request, compute the signature:
#
# SECRET="dev_secret_123"
# BODY="$(cat examples/payloads/payment_succeeded.json)"
# SIG=$(printf '%s' "$BODY" | openssl dgst -sha256 -hmac "$SECRET" | awk '{print $2}')
#
# Then set:
# X-Signature: sha256=<SIG>

POST http://localhost:8000/webhooks
Content-Type: application/json
X-Signature: sha256=REPLACE_WITH_COMPUTED_SIGNATURE

{
  "id": "evt_001",
  "type": "payment_succeeded",
  "created_at": "2025-12-27T00:00:00Z",
  "data": {
    "payment_id": "pay_123",
    "amount": 4200,
    "currency": "JPY",
    "customer_id": "cus_777"
  }
}
